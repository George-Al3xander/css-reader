{
    "name": "css-reader",
    "version": "0.0.1",
    "description": "Reads and parses CSS files.",
    "keywords": ["css", "nodejs", "read file", "parse css", "read css"],
    "homepage": "https://github.com/George-Al3xander/css-reader",
    "bugs": {
        "url": "https://github.com/George-Al3xander/css-reader/issues"
    },
    "author": "Heorhii Valuiskyi",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/George-Al3xander/css-reader.git"
    },
    "files": ["dist"],
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "ci": "pnpm build && pnpm check-exports & pnpm lint && pnpm format && pnpm test",
        "format": "pnpm biome format --write .",
        "lint": "biome lint --error-on-warnings .",
        "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
        "test": "vitest run",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "prepare": "husky"
    },
    "license": "MIT",
    "devDependencies": {
        "@arethetypeswrong/cli": "^0.17.3",
        "@biomejs/biome": "1.9.4",
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "husky": "^9.1.7",
        "typescript": "^5.7.3",
        "vitest": "^3.0.4"
    }
}
